generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum enumRole{
  admin
  gerente
  comum
}

enum enumStatus{
  ativo
  nao_ativo
}

enum reservaStatus{
  reservado
  nao_reservado
}

model usuario{
  id Int @id @default(autoincrement())
  nome String 
  username String @unique 
  cpf String @unique 
  role enumRole 
  status enumStatus 
  dataCadastro DateTime @default(now())
  id_cadastrou Int?
  localRelacionamento local[] @relation(name:"localUsernameUsuario") 
}

model local{
  id Int @id @default(autoincrement())
  capacidade Int 
  statusReserva reservaStatus
  status enumStatus
  local String
  descricao String
  dataEventoInicio DateTime @default(now())
  dataEventoFinal DateTime @default(now())
  usernameReserva String
  usuarioRelacionamento usuario @relation(fields:[usernameReserva],references:[username],name:"localUsernameUsuario")
}

